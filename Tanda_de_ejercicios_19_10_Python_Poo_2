"-----------------------------EJERCICIO 1----------------------------------"

class Motocicleta():
    estado = "nueva"

    def __init__(self, color, matricula, combustible_litros, numero_ruedas, marca, modelo, fecha_fabricacion, velocidad_punta, peso):
        self.color = color
        self.matricula = matricula
        self.combustible_litros = combustible_litros
        self.numero_ruedas = numero_ruedas
        self.marca = marca
        self.modelo = modelo
        self.fecha_fabricacion = fecha_fabricacion
        self.velocidad_punta = velocidad_punta
        self.peso = peso
    
    def arrancar (self):
        if self.motor:
            print ("El motor ya estaba arrancado")
        else:
            print ("El motor ha arrancado. No estaba encendido antes")

    def detener (self):
        if self.motor:
            print ("El motor ya estaba detenido")
        else:
            print ("El motor se ha detenido. No estaba detenido antes")



Motocicleta_1 = Motocicleta("Naranja", "")

